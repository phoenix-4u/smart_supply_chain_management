# Health First AI Supply Chain Management System
# Environment Configuration Template
# Copy this file to .env and update values as needed

# =====================================
# API Configuration
# =====================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# =====================================
# Database Configuration
# =====================================
# For development (SQLite)
DATABASE_URL=sqlite:///./health_first.db
# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/health_first_db
DATABASE_ECHO=False

# =====================================
# Agent Update Intervals (seconds)
# =====================================
MARKET_INTELLIGENCE_UPDATE_INTERVAL=300
DEMAND_FORECAST_UPDATE_INTERVAL=600
INVENTORY_CHECK_INTERVAL=900
SUPPLIER_COORDINATION_INTERVAL=1800

# =====================================
# External API Keys
# =====================================
# Social Media Monitoring
SOCIAL_MEDIA_API_KEY=your_social_media_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# News and Market Data
NEWS_API_KEY=your_news_api_key_here
ECONOMIC_DATA_API_KEY=your_economic_data_api_key_here

# Weather and Natural Disasters
WEATHER_API_KEY=your_weather_api_key_here

# Financial and Market Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here

# =====================================
# Security Configuration
# =====================================
SECRET_KEY=health-first-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# =====================================
# Market Intelligence Thresholds
# =====================================
SOCIAL_MEDIA_SPIKE_THRESHOLD=2.0
SENTIMENT_CHANGE_THRESHOLD=0.2
COMPETITOR_PRICE_CHANGE_THRESHOLD=0.05

# =====================================
# Demand Prediction Parameters
# =====================================
FORECAST_HORIZON_DAYS=90
CONFIDENCE_INTERVAL=0.95
MIN_HISTORICAL_DATA_POINTS=30

# =====================================
# Inventory Optimization Parameters
# =====================================
SAFETY_STOCK_MULTIPLIER=1.5
REORDER_POINT_BUFFER=0.2
MAX_INVENTORY_LEVEL_MULTIPLIER=3.0

# =====================================
# Supplier Coordination Parameters
# =====================================
SUPPLIER_PERFORMANCE_THRESHOLD=0.95
DELIVERY_TIME_TOLERANCE_DAYS=2
QUALITY_SCORE_THRESHOLD=4.0

# =====================================
# Logging Configuration
# =====================================
LOG_LEVEL=INFO
LOG_FILE=health_first.log

# =====================================
# Cache Configuration
# =====================================
CACHE_TTL=300
# Redis Configuration (optional)
# REDIS_URL=redis://localhost:6379/0

# =====================================
# Monitoring and Alerting
# =====================================
ENABLE_METRICS=True
METRICS_PORT=9090

# Email Alerting (optional)
ALERT_EMAIL_ENABLED=False
ALERT_EMAIL_RECIPIENTS=admin@healthfirst.com,ops@healthfirst.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# =====================================
# Machine Learning Configuration
# =====================================
MODEL_RETRAIN_INTERVAL_HOURS=24
MODEL_ACCURACY_THRESHOLD=0.85

# Model Weights for Ensemble
# These should sum to 1.0
ENSEMBLE_WEIGHT_LINEAR_REGRESSION=0.3
ENSEMBLE_WEIGHT_RANDOM_FOREST=0.4
ENSEMBLE_WEIGHT_XGBOOST=0.3

# =====================================
# Data Processing Configuration
# =====================================
DATA_PROCESSING_BATCH_SIZE=1000
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30

# =====================================
# Health First Business Configuration
# =====================================
# Note: PRODUCT_CATEGORIES, HEALTH_FIRST_COMPETITORS, and SERVICE_REGIONS are loaded from settings.py defaults
# To override, set them as JSON arrays in environment variables

# =====================================
# Development and Testing
# =====================================
# Enable/disable features for development
ENABLE_MOCK_DATA=True
ENABLE_SIMULATION_MODE=True
DISABLE_EXTERNAL_APIS=False

# Testing configuration
TEST_DATABASE_URL=sqlite:///./test_health_first.db
RUN_INTEGRATION_TESTS=False

# =====================================
# Production Deployment
# =====================================
# SSL Configuration
SSL_ENABLED=False
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancing
ENABLE_LOAD_BALANCER=False
WORKER_PROCESSES=4

# Monitoring Services
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Cloud Storage (AWS S3, Google Cloud, etc.)
CLOUD_STORAGE_ENABLED=False
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=health-first-data-bucket
AWS_REGION=us-east-1

# =====================================
# Backup and Recovery
# =====================================
BACKUP_ENABLED=False
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup/health-first/

# =====================================
# Feature Flags
# =====================================
FEATURE_ADVANCED_ANALYTICS=True
FEATURE_REAL_TIME_ALERTS=True
FEATURE_PREDICTIVE_MAINTENANCE=False
FEATURE_BLOCKCHAIN_TRACKING=False
FEATURE_AI_CHATBOT=False

# =====================================
# Compliance and Audit
# =====================================
ENABLE_AUDIT_LOGGING=True
AUDIT_LOG_RETENTION_DAYS=365
HIPAA_COMPLIANCE_MODE=False
SOX_COMPLIANCE_MODE=False

# =====================================
# Performance Tuning
# =====================================
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
API_RATE_LIMIT_PER_MINUTE=1000
CACHE_SIZE_MB=512

# =====================================
# Internationalization
# =====================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr
DEFAULT_TIMEZONE=UTC
DEFAULT_CURRENCY=USD

# =====================================
# Custom Business Rules
# =====================================
# Minimum order quantities
MIN_ORDER_QTY_PPE=100
MIN_ORDER_QTY_PHARMACEUTICALS=50
MIN_ORDER_QTY_MEDICAL_SUPPLIES=200

# Maximum lead times (days)
MAX_LEAD_TIME_CRITICAL=3
MAX_LEAD_TIME_STANDARD=14
MAX_LEAD_TIME_NON_CRITICAL=30

# Budget limits
EMERGENCY_ORDER_BUDGET_LIMIT=100000
MONTHLY_PROCUREMENT_BUDGET=2000000
ANNUAL_CAPEX_BUDGET=5000000
